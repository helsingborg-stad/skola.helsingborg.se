    "extra": {
        "path": "/",
        "wordpress-install-dir": "wp",
        "installer-paths": {
            "wp-content/plugins/{$name}": ["type:wordpress-plugin"],
            "wp-content/themes/{$name}": ["type:wordpress-theme"]
        }
    },

    "scripts": {
        "post-install-cmd": [
            "mkdir -p wp-content/uploads/cache/blade-cache",
            "@php post-install.php"
        ],
        "post-update-cmd": [
            "@php post-install.php"
        ]
    }
}
